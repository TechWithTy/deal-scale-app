{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@root/*": ["./*"]
    }
  },
  "include": [
    "types/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "types/**/*.ts",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "api/**/*.ts",
    "api/**/*.tsx",
    "actions/**/*.ts",
    "actions/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "external/**",
    "types/zod/**",
    "_tests/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
