{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true, // This helps skip errors from node_modules types
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext", // Supports ES modules
		"moduleResolution": "node", // Use Node.js module resolution
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"types": ["vitest/globals", "node"],
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@root/*": ["./*"],
			"@ssf/*": ["external/score-streak-flow/src/*"],
			"external/*": ["external/*"],
			"@/store/*": ["lib/stores/*"],
			"@/store/user": ["lib/stores/userStore"]
		}
	},
	"include": [
		"next-env.d.ts",
		"types/**/*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"global.d.ts"
	],
	"exclude": [
		"node_modules",
		"external/**",
		"_tests/**"
	]
}
